    <body>
        <referenceBlock name="order_items">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Bison_CustomizableProducts::order/view/items.phtml</argument>
            </action>
        </referenceBlock>

        <referenceBlock name="default_order_items_renderer">
            <action method="setTemplate">
